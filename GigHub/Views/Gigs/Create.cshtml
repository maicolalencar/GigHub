@model GigHub.ViewModels.GigFormViewModel
@{ 
    ViewBag.Title = "Gigs";
}

<h2>Add a Gig</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "Selecione...", new { @class = "form-control" })

    </div>
    <div>
        <button class="btn btn-primary">Save</button>
    </div>

</form>